div#upload_Dialog.modal.fade(role="dialog")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button" data-dismiss="modal") &times;
        h4.modal-title Upload, Yay!
      div.modal-body
        //enctype, method are important for the ajax submit to work properly
        form(enctype="multipart/form-data" method="post" action="/profile/upload/")
          div
            span Title
            br
            input.title(type="text" name="name")
            br
            span Description
            br
            textarea.description(rows="4" cols="50")
            br
            span Unique URL
            br
            input.url(type="text" name="name")
            br
            ul
              span.chapter Chapter 1:
                br
                button.btn.btn-default.new_page(type="button") Add Page
            br
            button.btn.btn-defaul(type="button") Add Chapter 
          input(id="submit" type="button" value="Upload")
      div.modal-footer
        button.btn.btn-default(type="button" data-dismiss="modal") Close
